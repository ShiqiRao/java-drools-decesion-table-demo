package org.drools.examples.decisiontable;

function int countConfidence(Double[] confidences, Double[] confidenceThreshold){
  int result = 0;
  for(Double c : confidences){
    if(confidenceThreshold[0] <= c && confidenceThreshold[1] >= c){
      result++;
    }
  }
  return result;
}

